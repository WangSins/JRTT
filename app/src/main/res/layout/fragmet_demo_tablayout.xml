<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    tabMode:小标题显示的模式
        fixed:默认模式,宽度固定
        scrollable:可以滚动,如果宽度不够，文字挤在一起
        tabTextColor:设置的是小标题默认的颜色
        tabSelectedTextColor：设置的是小标题选中的颜色
        Indicator:表示文字 下面的滑动线
    -->
    <!--指示器-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:tabMode="scrollable"
        app:tabTextColor="#1E1E20"
        app:tabSelectedTextColor="#FF4444"
        app:tabIndicatorColor="#FF4444"
        style="@style/TAB_LAYOUT"
       />
    <android.support.v4.view.ViewPager
        android:id="@+id/tab_viewpager"
        style="@style/TAB_VIEWPAGER"
     />
</LinearLayout>